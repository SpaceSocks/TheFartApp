{
  "appId": "com.fartapp.app",
  "appName": "The Fart App",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "iosScheme": "capacitor"
  },
  "plugins": {
    "LocalNotifications": {
      "smallIcon": "ic_stat_icon",
      "iconColor": "#9333EA",
      "sound": "default"
    },
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#9333EA",
      "showSpinner": false
    }
  },
  "ios": {
    "contentInset": "automatic",
    "allowsLinkPreview": false
  }
}
